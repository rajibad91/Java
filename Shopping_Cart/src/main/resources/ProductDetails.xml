<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">


	<bean id="beanProductDetails"
		class="com.example.spring.Shopping_Cart.ProductDetailsDAO">
		<property name="productDetails">
			<map>
				<entry key="${productDetails.Id1}"
					value="${productDetails.Name1}"></entry>
				<entry key="${productDetails.Id2}"
					value="${productDetails.Name2}"></entry>
				<entry key="${productDetails.Id3}"
					value="${productDetails.Name3}"></entry>
				<entry key="${productDetails.Id4}"
					value="${productDetails.Name4}"></entry>
				<entry key="${productDetails.Id5}"
					value="${productDetails.Name5}"></entry>
				<entry key="${productDetails.Id6}"
					value="${productDetails.Name6}"></entry>
				<entry key="${productDetails.Id7}"
					value="${productDetails.Name7}"></entry>
				<entry key="${productDetails.Id8}"
					value="${productDetails.Name8}"></entry>
				<entry key="${productDetails.Id9}"
					value="${productDetails.Name9}"></entry>
			</map>
		</property>
	</bean>
	<bean id="mailProperties"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location"
			value="classpath:category.properties" />
	</bean>

</beans>